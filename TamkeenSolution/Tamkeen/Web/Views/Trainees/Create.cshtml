@model Tamkeen.Domain.Entities.Trainee

<h2>Create Trainee</h2>

<form asp-action="Create" method="post">

    <div class="mb-3">
        <label>University</label>
        <input asp-for="University" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Major</label>
        <input asp-for="Major" class="form-control" />
    </div>

    <div class="mb-3">
        <label>GPA</label>
        <input asp-for="GPA" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Status</label>
        <select asp-for="Status" class="form-control"
                asp-items="Html.GetEnumSelectList<Tamkeen.Domain.Enums.TraineeStatus>()">
        </select>
    </div>

    <button class="btn btn-success">Save</button>

</form>
