@model IEnumerable<Tamkeen.Domain.Entities.Application>

<h2>Applications</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Create Application</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>University</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var app in Model)
        {
            <tr>
                <td>@app.FullName</td>
                <td>@app.Email</td>
                <td>@app.University</td>
                <td>@app.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@app.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@app.Id" class="btn btn-warning btn-sm">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
