@model IEnumerable<Tamkeen.Domain.Entities.TrainingProgram>

<h2>Training Programs</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Create Program</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Capacity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var program in Model)
        {
            <tr>
                <td>@program.Name</td>
                <td>@program.StartDate.ToShortDateString()</td>
                <td>@program.EndDate.ToShortDateString()</td>
                <td>@program.Capacity</td>
                <td>
                    <a asp-action="Details" asp-route-id="@program.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@program.Id" class="btn btn-warning btn-sm">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
